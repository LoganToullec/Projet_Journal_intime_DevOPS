properties([
  parameters([
    [
      $class: 'ChoiceParameter',
      choiceType: 'PT_SINGLE_SELECT',
      name: 'Month',
      script: [
        $class: 'ScriptlerScript',
        scriptlerScriptId:'Months.groovy'
      ]
    ],
    [
      $class: 'CascadeChoiceParameter',
      choiceType: 'PT_CHECKBOX',
      name: 'USinEPIC',
      referencedParameters: 'Month',
      script: [
        $class: 'ScriptlerScript',
        scriptlerScriptId:'USinEPIC.groovy',
        parameters: [
          [name:'Month', value: '$Month']
        ]
      ]
   ]
 ])
])

pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        echo "${params.Month}"
        echo "${params.USinEPIC}"
      }
    }
  }
}